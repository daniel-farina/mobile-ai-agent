{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
  },
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,
  "model": "claude-3-5-sonnet-20241022",
  "verbose": false,
  "theme": "dark",
  "autoUpdates": true,
  "preferredNotifChannel": "terminal_bell"
}
